<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Download">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/kode">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/putih"
                android:gravity="center"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txtJudul"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="DOWNLOAD SOAL"
            android:textColor="@color/kode"
            android:textSize="21sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="536dp"
            android:layout_below="@+id/judul"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/form"
                android:layout_width="380dp"
                android:layout_height="365dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="358dp"
                    android:layout_height="355dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/putih"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtWebProgramming"
                        style="@style/styleEditText"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/button2"
                        android:padding="20dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text="1. Web Programming.pdf"
                        android:textColor="@color/Hitam"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtUI"
                        style="@style/styleEditText"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/button2"
                        android:padding="20dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="50dp"
                        android:text="2. UI/UX.pdf"
                        android:textColor="@color/Hitam"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtFrontend"
                        style="@style/styleButtonPDF"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/button2"
                        android:padding="20dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text="3. Frontend.pdf"
                        android:textColor="@color/Hitam"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtDatabase"
                        style="@style/styleButtonPDF"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/button2"
                        android:padding="20dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text="4. Database.pdf"
                        android:textColor="@color/Hitam"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtWebDev"
                        style="@style/styleButtonPDF"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/button2"
                        android:padding="20dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text="5. Web Developer.pdf"
                        android:textColor="@color/Hitam"
                        android:textSize="18sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/button_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-3dp"
        android:background="@color/putih"
        app:menu="@menu/buttom_nav_menu" />

</RelativeLayout>