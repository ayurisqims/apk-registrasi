<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Data_kel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/kode">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/putih"
                android:gravity="center"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/judul"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="DETAIL KELOMPOK"
            android:textColor="@color/kode"
            android:textSize="21sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/judul"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUniv"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/universitas"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtFakultas"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/fakultas"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtProdi"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/prodi"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtAlamat_univ"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/alamat"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtJumlah_ang"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/jumlah"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtKel"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/kel"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtPeriodeM"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Periode Mulai"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtPeriodeA"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Periode Akhir"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtNK"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/nama"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtEmail"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/email"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnEdit"
                            android:layout_width="176dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/button2"
                            android:text="Edit Data"
                            android:textAllCaps="false"
                            android:textColor="@color/kode"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/button2"
                            android:text="Detail Anggota Kelompok"
                            android:textSize="15sp"
                            android:textAllCaps="false"
                            android:textColor="@color/kode"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/button_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-3dp"
        android:background="@color/putih"
        app:menu="@menu/buttom_nav_menu" />

</RelativeLayout>